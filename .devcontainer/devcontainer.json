{
  "name": "Minimal VS Code with Fira Code and Dracula",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.editor.decorations.badges": false,
        "workbench.editor.highlightModifiedTabs": false,
        "workbench.startupEditor": "none",
        "workbench.activityBar.visible": true,
        "workbench.statusBar.visible": true,
        "editor.fontFamily": "fira-code-nerd, FiraCode Nerd Font, Consolas, 'Courier New', monospace",
        "editor.fontLigatures": true,
        "editor.fontSize": 14,
        "editor.lineHeight": 24,
        "editor.renderWhitespace": "boundary",
        "editor.minimap.enabled": false,
        "editor.overviewRulerBorder": false,
        "editor.smoothScrolling": true,
        "editor.scrollBeyondLastLine": false,
        "explorer.autoReveal": false,
        "explorer.compactFolders": false,
        "explorer.openEditors.visible": 1,
        "breadcrumbs.enabled": false,
        "terminal.integrated.fontSize": 13,
        "terminal.integrated.fontFamily": "fira-code-nerd, FiraCode Nerd Font, Consolas, 'Courier New', monospace",
        "terminal.integrated.cursorStyle": "line",
        "terminal.integrated.lineHeight": 1.2,
        "files.autoSave": "onFocusChange",
        "files.trimTrailingWhitespace": true,
        "editor.formatOnSave": false,
        "editor.defaultFormatter": null,
        "window.zoomLevel": 1,
        "window.titleBarStyle": "custom",
        "window.menuBarVisibility": "compact"
      },
      "extensions": [
        "dracula-theme.theme-dracula",
        "danielra.fira-material-icon-theme",
      ]
    }
  }
}
